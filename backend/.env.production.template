# Production Environment Variables
# Copy this file and fill in actual values on Render dashboard

NODE_ENV=production
PORT=5000

# CORS - Update with your actual Netlify URL
CORS_ORIGIN=https://chargerbnb.netlify.app

# Database - Automatically provided by Render PostgreSQL
# DATABASE_URL=<set-by-render>

# JWT Secrets - Generate strong secrets
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_256_BIT
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_STRONG_SECRET_256_BIT
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Optional: Razorpay for payments
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Optional: Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
